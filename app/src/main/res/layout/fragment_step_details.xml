<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.StepDetailsActivity">

    <ImageView
        android:id="@+id/ivNoVideo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="invisible"
        android:src="@drawable/no_video"/>

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <TextView
        android:id="@+id/tvStepDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:padding="10dp"
        android:layout_below="@+id/playerView"/>

    <ImageView
        android:id="@+id/ivStepThumbnail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/tvStepDescription"/>

</RelativeLayout>